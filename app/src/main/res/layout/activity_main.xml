<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.threepartballot.camilog.signatureapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:typeface="monospace"
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_ballot"
        android:background="@drawable/btn_green"
        style="@style/ButtonText"
        android:id="@+id/sign_button2"
        android:layout_above="@+id/configurate_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configure_key"
        android:id="@+id/configurate_button"
        android:background="@drawable/btn_blue"
        style="@style/ButtonText"
        android:layout_marginBottom="92dp"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
